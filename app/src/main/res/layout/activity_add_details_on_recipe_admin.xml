<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.shanir.cookingappofshanir.Admin.AdminAddRecipeActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivadmindetails"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:src="@drawable/account_profile"
        android:textColor="#F9AC36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etnameofrecipeadddetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="recipe name"
        android:padding="20dp"
        android:textColor="#000"
        android:textColorHint="@color/colorHintText"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivadmindetails" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayoutaddingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivadmindetails"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_load_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/etnameofrecipeadddetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="recipe name"
            android:padding="20dp"
            android:textColor="#000"
            android:textColorHint="@color/colorHintText"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivadmindetails" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_recipe_attributes_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/etnameofrecipeadddetails">

            <LinearLayout
                android:id="@+id/add_details_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/add_recipe_difficulty_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/ettimeadddetailsadmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="time"
                    android:inputType="number"
                    android:paddingRight="2dp"
                    android:textColor="#666"
                    android:textColorHint="@color/colorHintText"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_access_time_24"
                    app:tint="#666" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_recipe_difficulty_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/add_details_time_layout"
                app:layout_constraintTop_toTopOf="parent">

                <RadioGroup
                    android:id="@+id/rgDiff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbEasy"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#60A430"
                        android:text="Easy"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/rbMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/holo_orange_light"
                        android:text="Medium"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/rbHard"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/holo_red_light"
                        android:text="Hard"
                        android:textSize="15dp" />

                </RadioGroup>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tvheadingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="Add Ingredients"
            android:textColor="#222"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_recipe_attributes_layout" />


        <ListView
            android:id="@+id/listviewconsumersa"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:divider="#ccc"
            android:dividerHeight="1px"
            app:layout_constraintTop_toBottomOf="@id/tvheadingredients" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_recipe_add_ingredients_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/listviewconsumersa">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivconsumersaddaa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/add_recipe_ingredients_units"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="3"
                    android:background="@drawable/edit_text_design"
                    android:fontFamily="sans-serif-light"
                    android:hint="Enter unit"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorHintText"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etwriteconsumersa"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:background="@drawable/edit_text_design"
                    android:fontFamily="sans-serif-light"
                    android:hint="Enter ingredient"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorHintText"
                    android:textSize="16sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivconsumersaddaa"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/plus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btsaverecipeee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/colorPrimary"
            android:text="add"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_recipe_add_ingredients_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
