<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="27"
    android:orientation="vertical"
    tools:context="com.example.shanir.cookingappofshanir.Profile">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="5"
    android:layout_weight="10"
    android:layout_height="0dp">

<LinearLayout
    android:layout_width="0dp"
    android:orientation="vertical"
    android:layout_weight="2"
    android:weightSum="3"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvheadprofile"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="#100f0f"
        android:layout_weight="1"
        android:text="לחץ על המצלמה כדי לצלם כעת תמונת פרופיל "
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

        />
    <ImageView
        android:id="@+id/imageprofilecemra"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_gravity="center"
        android:background="@drawable/cemera"
        android:scaleType="centerCrop"

        />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content">

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#080808"
        android:id="@+id/tvdetailsprofil"
        android:layout_weight="6"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvheadprofile2"
        android:layout_width="wrap_content"
        android:textColor="#100f0f"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:text="לחץ על הפלאפון כדי לקחת תמונה מהגלריה שלך "
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

        />

        <ImageView
            android:id="@+id/imageprofilephone"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:background="@drawable/phone"
            android:scaleType="centerCrop"

            />

    </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp">

    </LinearLayout>


    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageviewprofill"
        android:layout_width="100dp"
        android:background="@drawable/missing"

        android:layout_weight="5"
        android:layout_height="0dp"
        />


        <ProgressBar
        android:id="@+id/pbprofile"
            android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
            android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_centerVertical="true"/>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_weight="2"
    android:layout_height="wrap_content">

</LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:id="@+id/tvtextprofil"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_height="0dp" />
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pbprofileupdate"
android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:layout_height="0dp">

    </LinearLayout>
    <TextView
        android:id="@+id/tvvreified"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content">

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/btsaveprofile"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimary"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:text="save"
        android:textAllCaps="false"
        />

</LinearLayout>

