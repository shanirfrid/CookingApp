<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayoutProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context="com.example.shanir.cookingappofshanir.UserProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/right_arrow_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="20dp"
                android:src="@drawable/ic_menu" />

            <TextView
                android:id="@+id/tvhead_my_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.4"
                android:padding="20dp"
                android:text="Profile"
                android:textColor="#F9AC36"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btsaveprofile"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                android:layout_weight="0.5"
                android:background="@drawable/ic_edit"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="4">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_iv_account_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:src="@drawable/profile_icon"
                android:textColor="#F9AC36"
                android:textSize="28sp" />

        </LinearLayout>

        <ProgressBar
            android:layout_weight="1"
            android:id="@+id/pbprofile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <ScrollView
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight="15"
            android:background="#FAFAFA"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvdetailsprofil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/tv_icon_email"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/email_confirm" />

        <TextView
            android:id="@+id/tv_header_verify_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_line"
            android:gravity="center"
            android:text="Verify your email"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_verigy_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hi! use the button below to verify your vemail and start enjoying Recipe app"
            android:textColor="#565252"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvvreified"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:clickable="false"
            android:gravity="center"
            android:text="Verify Email"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>

