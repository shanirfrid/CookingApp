<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    android:weightSum="20">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_update_profile_image"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:src="@drawable/account_profile"
        android:textColor="#F9AC36" />

    <ProgressBar
        android:id="@+id/pb_update_profile"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_firstname_update_profile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:background="@drawable/edit_text_design"
            android:hint="First name"
            android:paddingLeft="15sp"
            android:textColor="#000000"
            android:textColorHint="#9C9C9C" />

        <EditText
            android:id="@+id/et_lastname_update_profile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:background="@drawable/edit_text_design"
            android:hint="Last name"
            android:paddingLeft="15sp"
            android:textColor="#000000"
            android:textColorHint="#9C9C9C" />

        <EditText
            android:id="@+id/et_id_update_profile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:background="@drawable/edit_text_design"
            android:hint="Id"
            android:paddingLeft="15sp"
            android:textColor="#000000"
            android:textColorHint="#9C9C9C" />

        <EditText
            android:id="@+id/et_phone_update_profile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:background="@drawable/edit_text_design"
            android:hint="Phone"
            android:paddingLeft="15sp"
            android:textColor="#000000"
            android:textColorHint="#9C9C9C" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_update_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="@drawable/button_design"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />


</LinearLayout>