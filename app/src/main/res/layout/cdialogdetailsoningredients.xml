<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:id="@+id/customdialogingredient"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <TextView android:id="@+id/tvheadadmindetailsoningredient"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="26sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="פרטים על המרכיב:  "/>


    <EditText android:id="@+id/etkindofIngredient"
       android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:textAlignment="center"
        android:hint="סוג מרכיב (פחמימות,חלבונים..)"
        android:textColorHint="#837e7e"
        android:textSize="20sp"
        android:layout_gravity="center"
        />
    <EditText android:id="@+id/etcalories"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:hint="קלוריות"
        android:textColorHint="#837e7e"
        android:inputType="number|numberDecimal"/>


    <EditText android:id="@+id/etamount"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:textAlignment="center"
        android:hint="כמות (גרם)"
        android:textColorHint="#837e7e"
        android:inputType="number"/>

    <EditText android:id="@+id/etunits"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:textAlignment="center"
        android:hint="יחידות"
        android:textColorHint="#837e7e"/>

    <Button android:id="@+id/btdetailsoningredient"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="אישור"
        android:background="@color/colorPrimary"/>
</LinearLayout>
