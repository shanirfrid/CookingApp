<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLayoutlistofrecipe"
    android:weightSum="9"
    android:background="#d9d2d2"
    tools:context="com.example.shanir.cookingappofshanir.ListOfRecipe">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/tvheadrecipelist"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="רשימת מתכונים"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/tvnumrecipe"
        android:textColor="#333b83"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"
        android:text="נמצאו  X מתכונים"
        />
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listviewOfRecipes"
        android:layout_weight="6"
        android:layout_height="0dp">

    </ListView>


</LinearLayout>
