<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.shanir.cookingappofshanir.Admin.AdminRecipesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/admin_recipe_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/admin_logout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/logout" />

            <TextView
                android:id="@+id/tvheadaminlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="20dp"
                android:text="Recipes"
                android:textColor="#F9AC36"
                android:textSize="32sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvheadaminnumrecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="X recipes were found!"
            android:textColor="#F9AC36"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/admin_recipe_header" />

        <ProgressBar
            android:id="@+id/pbadminlistofrecipes"
            app:layout_constraintTop_toBottomOf="@id/tvheadaminnumrecipe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
           />

        <ListView
            android:id="@+id/listviewlistofallrecipe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:divider="#ccc"
            android:dividerHeight="1px"
            app:layout_constraintTop_toBottomOf="@id/pbadminlistofrecipes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/add_recipe_btn"
            tools:listitem="@layout/recipe_item_list" >
        </ListView>
        <Button
            android:id="@+id/add_recipe_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/button_design"
            android:text="Add recipe"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
