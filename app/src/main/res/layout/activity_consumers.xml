<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:background="#d9d2d2"
    android:layout_height="match_parent"
    tools:context="com.example.shanir.cookingappofshanir.Consumers">
    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:text="המצרכים שלי"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:id="@+id/tvheadconsumers"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
       >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/pluus"
            android:id="@+id/ivconsumersadd"
            android:scaleType="centerCrop"
            />

        <EditText
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:hint="הכנס כאן את המצרכים שלך"
            android:textColor="#0d0c0c"
            android:inputType="textCapSentences"
            android:id="@+id/etwriteconsumers"

            />

    </LinearLayout>



    <ListView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:id="@+id/listviewconsumers"
        android:layout_gravity="right"
        android:layout_height="300dp"
    >

    </ListView>




    <LinearLayout
     android:layout_width="wrap_content"
     android:orientation="horizontal"
     android:layout_gravity="center"
     android:layout_height="match_parent">
    <Button
        android:layout_width="wrap_content"
        android:background="#2749a6"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#f9f5f5"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:id="@+id/btsaveconsumers"
        android:text="שמור מצרכים"
        />
        <LinearLayout
            android:layout_width="50dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:background="#2749a6"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#f9f5f5"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:id="@+id/btmovetorecipelist"
        android:text="מתכונים המתאימים בשבילך"
        />

 </LinearLayout>




</LinearLayout>
