<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayoutConsumers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context="com.example.shanir.cookingappofshanir.Consumers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/right_arrow_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_menu"/>

            <TextView

                android:id="@+id/tvheadconsumers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_gravity="center"
                android:text="My Products"
                android:textColor="#F9AC36"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etwriteconsumers"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="5"
                android:background="@drawable/edit_text_design"
                android:hint="Enter here your products"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#9C9C9C" />

            <ImageView
                android:id="@+id/ivconsumersadd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/plus" />

        </LinearLayout>
        <ListView
            android:id="@+id/listviewconsumers"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="right"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/product_item_list">

        </ListView>


            <Button
                android:id="@+id/btsaveconsumers"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/button_design"
                android:text="Save products"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btmovetorecipelist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="@drawable/button_design"
                android:text="find recipes"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
