<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/dialogdetaileOnIngredientinrecipee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button android:id="@+id/btbackdetailsoningredient"
        android:layout_height="35dp"
        android:layout_width="40dp"
        android:textSize="20sp"
        android:layout_gravity="right"
        android:textStyle="bold"
        android:background="@drawable/logout"/>
    <TextView

        android:id="@+id/tvheaddetailsoningredientt"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="Details on ingredients: "/>


    <TextView android:id="@+id/tvunits"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:textAlignment="center"
        android:hint="250 g floor / 100ml water/ 1 cup"
        android:layout_gravity="center"
        android:textColorHint="#1e1e1e"
        />




</LinearLayout>