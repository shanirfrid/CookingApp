        </activity>
        <activity
            android:name=".Register"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DetailsOnRecipe"
            android:screenOrientation="portrait" />
        <activity android:name=".ListOfRecipe" />
        <activity android:name=".ListOfSaveRecipes" />
        <activity android:name=".Admin.Picture" />
        <activity android:name=".Timer" />
        <activity android:name=".Consumers" />
        <activity android:name=".Admin.AddDetailsOnRecipeAdmin" />
