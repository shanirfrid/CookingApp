<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shanir.cookingappofshanir">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/appicon"
        android:label="shanir recipe"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.Design.NoActionBar">
        <activity
            android:name=".activities.user.EditProfileActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.user.SignInActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.user.RegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.user.UserProfileActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.user.DetailsOnRecipeActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.user.UserSuitableRecipesActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.user.UserFavoriteRecipesActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.user.UserIngredientsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.admin.AdminAddRecipeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.admin.AdminRecipesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.user.TimerActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>